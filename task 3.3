import tkinter as tk

root = tk.Tk()
root.title("Анкета користувача")
root.geometry("500x350")
root.resizable(False, False)

tk.Label(root, text="Ім'я:").grid(row=0, column=0, padx=10, pady=10, sticky="w")
entry_name = tk.Entry(root, width=30)
entry_name.grid(row=0, column=1, padx=10, pady=10)

tk.Label(root, text="Стать:").grid(row=1, column=0, padx=10, pady=10, sticky="w")

gender = tk.StringVar()

tk.Radiobutton(root, text="Чоловіча", variable=gender, value="Чоловіча")\
    .grid(row=1, column=1, sticky="w")
tk.Radiobutton(root, text="Жіноча", variable=gender, value="Жіноча")\
    .grid(row=2, column=1, sticky="w")

agree = tk.BooleanVar()
tk.Checkbutton(root, text="Погоджуюсь із умовами", variable=agree)\
    .grid(row=3, column=1, pady=10, sticky="w")

result_label = tk.Label(root, text="", justify="left", fg="blue")
result_label.grid(row=5, column=0, columnspan=2, padx=10, pady=20, sticky="w")

def save_data():
    name = entry_name.get()
    gen = gender.get()
    agreement = "Так" if agree.get() else "Ні"

    result_label.config(
        text=f"Ім'я: {name}\nСтать: {gen}\nПогодження: {agreement}"
    )

tk.Button(root, text="Зберегти", command=save_data, width=20)\
    .grid(row=4, column=1, pady=10)

root.mainloop()
