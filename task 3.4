import tkinter as tk

root = tk.Tk()
root.title("Калькулятор")
root.geometry("400x300")
root.resizable(False, False)

tk.Label(root, text="Перше число:").grid(row=0, column=0, padx=10, pady=10, sticky="w")
entry_a = tk.Entry(root, width=20)
entry_a.grid(row=0, column=1, padx=10, pady=10)

tk.Label(root, text="Друге число:").grid(row=1, column=0, padx=10, pady=10, sticky="w")
entry_b = tk.Entry(root, width=20)
entry_b.grid(row=1, column=1, padx=10, pady=10)

result_label = tk.Label(root, text="Результат: ", font=("Arial", 14))
result_label.grid(row=2, column=0, columnspan=2, pady=20)

def calculate(operation):
    try:
        a = float(entry_a.get())
        b = float(entry_b.get())

        if operation == "+":
            res = a + b
        elif operation == "-":
            res = a - b
        elif operation == "*":
            res = a * b
        elif operation == "/":
            if b == 0:
                raise ZeroDivisionError
            res = a / b

        result_label.config(text=f"Результат: {res}")

    except ValueError:
        result_label.config(text="Помилка: введіть числа")
    except ZeroDivisionError:
        result_label.config(text="Помилка: ділення на нуль")

tk.Button(root, text="+", width=6, command=lambda: calculate("+"))\
    .grid(row=3, column=0, pady=5)
tk.Button(root, text="-", width=6, command=lambda: calculate("-"))\
    .grid(row=3, column=1, pady=5)
tk.Button(root, text="*", width=6, command=lambda: calculate("*"))\
    .grid(row=4, column=0, pady=5)
tk.Button(root, text="/", width=6, command=lambda: calculate("/"))\
    .grid(row=4, column=1, pady=5)

root.mainloop()
