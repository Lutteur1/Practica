students = []

n = int(input("Введіть кількість студентів: "))

for i in range(n):
    name = input("Ім'я: ")
    surname = input("Прізвище: ")
    marks = []

    for j in range(5):
        mark = int(input("Оцінка: "))
        marks.append(mark)

    students.append({
        "name": name,
        "surname": surname,
        "marks": marks
    })

print("\nТаблиця студентів:")
print("Ім'я  Прізвище  Середній бал")

for student in students:
    avg = sum(student["marks"]) / 5
    print(student["name"], student["surname"], round(avg, 2))

print("\nСередній бал групи з кожної дисципліни:")

for i in range(5):
    total = 0
    for student in students:
        total += student["marks"][i]
    print("Дисципліна", i + 1, ":", round(total / n, 2))

